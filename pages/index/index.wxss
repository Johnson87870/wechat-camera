}
.base-img{
  position: fixed;
  z-index: 101;
}
.identification {
  position: relative;
  /* border: 6px solid green; */
  border-top: 6px solid green;
  border-left: 6px solid green;
  border-bottom: 6px solid green;
  border-radius: 6px;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.identification::after{
  clear: both;
  content: "";
  display: block;
  width: 6px;
  height: 100%;
  background-color: green;
  position: absolute;
  top: 0;
  right: 0px;
}
.success-img{
  position: fixed;
  z-index: 101;
  background-color: black;
}
.after-img-tips{
  display: flex;
