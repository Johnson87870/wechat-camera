.camera-photo {
  position: fixed;
  z-index: 100;
  overflow: hidden;
}

.content {
  position: relative;
}
.top {
  position: absolute;
  width: 100%;
  top: 0;
  left: 0;
  transform: translate(0,0);
}
.left {
  position: absolute;
  height: 440px;
  left: 0;
  border-top: 6px solid rgba(0, 0, 0, 0);
  border-bottom: 6px solid rgba(0, 0, 0, 0);
}
.right {
  border-top: 6px solid rgba(0, 0, 0, 0);
  border-bottom: 6px solid rgba(0, 0, 0, 0);
  position: absolute;
  height: 440px;
  right: 0;
}
.bottom {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  transform: translate(0,0);
}
.identification {
  width:  262px;
  height:  440px;
  border: 6px solid green;
  border-radius: 6px;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.bg-mask {
  background-color: rgba(0, 0, 0, .5);
}

.footer {
  width: 100%;
  height: 100px;
  background-color: #000;
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.take-icon {
  width: 72px;
  height: 72px;
  margin-bottom: 10px;
}

.canvas-style{
  margin: auto;
  overflow: hidden;
}
