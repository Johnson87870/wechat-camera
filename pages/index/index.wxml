<camera wx:if="{{openCamera}}" class="camera-photo" frame-size="large" device-position="{{devBack}}" flash="off" binderror="error" style="width:{{info.windowWidth}}px;height:{{info.windowHeight}}px;">
	<cover-view class="page-flex" style="width:{{info.windowWidth}}px; height:{{info.windowHeight}}px;">
    <cover-view class="header" style="width:{{info.windowWidth}}px"></cover-view>
		<cover-view style="width:{{maskWidth}}px;height:{{canvasHeight}}px;top:{{maskHeight}}px" class="page-mask page-mask-lr absolute left"></cover-view>
		<cover-view class="page-content" style="height:{{info.windowHeight}}px;">
			<cover-view class="page-mask absolute top" style="width:{{info.windowWidth}}px;height:{{maskHeight}}px;"></cover-view>
			<cover-view class="identification" style="width:{{canvasWidth}}px; height:{{canvasHeight}}px;margin:auto"></cover-view>
			<cover-view class="page-mask absolute bottom" style="width:{{info.windowWidth}}px;height:{{maskHeight}}px">
      </cover-view>
		</cover-view>
		<cover-view style="width:{{maskWidth}}px;top:{{maskHeight}}px;height:{{canvasHeight}}px;" class="page-mask page-mask-lr absolute right"></cover-view>
    <cover-view class="footer" style="width:{{info.windowWidth}}px">
        <cover-view class="take-icon" bindtap="takePhoto">
        <cover-image class="take-photo" src="./take@2x.png"></cover-image>
      </cover-view>
    </cover-view>
	</cover-view>
    <cover-view class="id-card">
       请将证件放在框内拍摄
    </cover-view>
</camera>


<cover-view  wx:if="{{isCanvas}}" class="photo-view" style="width:{{info.windowWidth}}px;height:{{info.windowHeight}}px;">
  <canvas wx:if="{{isCanvas}}" class="canvas-style" canvas-id="myCanvas" style="width:{{canvasWidth}}px; height:{{canvasHeight}}px;"></canvas>
</cover-view>

<cover-view wx:if="{{isSuccess}}" class="photo-view" style="width:{{info.windowWidth}}px;height:{{info.windowHeight}}px;">
<cover-image class="photo-image" src="{{srcCanvasPath}}"></cover-image>
<cover-view class="photo-button">
  <button bindtap="clearPhoto">重拍</button>
  <button bindtap="confirmBack">确认</button>
</cover-view>
</cover-view>



