<cover-image class="photo-image" src="{{srcCanvasPath}}"></cover-image>
<cover-view class="photo-button">
  <button bindtap="clearPhoto">重拍</button>
  <button bindtap="confirmBack">确认</button>
</cover-view>
</cover-view>



